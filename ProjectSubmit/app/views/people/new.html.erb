<h1>Adicionar Pessoas</h1>

<%= form_for :person, url: people_path do |f| %>
 
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@person.errors.count, "error") %> n√£o foi guardado
      </h2>
      <ul>
        <% @person.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :"Nome" %><br>
    <%= f.text_field :name %>
  </p>
 
 <p>
    <%= f.label :"email" %><br>
    <%= f.text_field :email %>
  </p>
<p>
  <%= f.label :"Foto" %><br>
  <%= f.file_field :photo%>
   </p>
 
  <p>

    <%= f.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Voltar', people_path %>