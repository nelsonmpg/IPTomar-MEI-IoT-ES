<div class="content mt-1">
  <div class="jumbotron px-1 py-1 rounded">
    <div class="alert alert-success" role="alert">
      <h1 class="text-xs-center">Pessoas</h1>
    </div>
    <p id="notice"><%= notice %></p>

    <% if user_signed_in?%>
      <%= link_to '<i class="fa fa-plus-circle" aria-hidden="true"></i> Pessoa'.html_safe, new_person_path, class: "btn btn-outline-success" %> 
    <%end%>

    <div class="table-responsive card card-outline-secundary mt-1">
      <div class="card-block">
        <table class="table table-hover table-sm">
          <thead class="thead-inverse">
            <tr>
              <th>Nome</th>
              <th>Email</th>
              <th>Foto</th>
              <th>Titulo</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @people.each do |person| %>
              <tr>
                <td class="align-middle"><%= person.name %></td>
                <td class="align-middle"><%= person.email%></td>
                <td class="align-middle"><%= image_tag person.photo.url(:thumb) %></td>
                <td class="align-middle"><%= person.person_type.try(:designation)%>

                <td class="align-middle">
                    <%= link_to 'Visualizar', person_path(person), class: "btn btn-outline-info btn-sm btn-block d-inline-block" %>
                    <% if user_signed_in? %>
                      <%= link_to 'Editar', edit_person_path(person), class: "btn btn-outline-success btn-sm btn-block" %>
                      <%= button_to 'Eliminar', person_path(person), method: :delete, data: { confirm: 'Tem a certeza de que quer eliminar este Projeto?' }, class: "btn btn-outline-danger btn-sm btn-block" %> 
                    <%end%>             
                  </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>