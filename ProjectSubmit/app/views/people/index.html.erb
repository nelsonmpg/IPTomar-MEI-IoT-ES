<h1>Lista de Pessoas</h1>
 
 <%= link_to 'Adicionar Pessoas', new_person_path %>
<table>
  <tr>
    <th>Pessoas:</th>

  </tr>
 
  <% @person.each do |person| %>
    <tr>
      <td><%= person.name %></td>
      <td><%= person.email %></td>
      <td><%= person.photo %></td>

      <td><%= link_to 'Mostrar', people_path(person) %></td>
      <td><%= link_to 'Editar', edit_person_path(person) %></td>
      <td><%= link_to 'Remover', people_path(person), method: :delete, data: { confirm: 'Tem a certeza que deseja eliminar esta pessoa?' } %></td>
    
    </tr>
  <% end %>
</table>