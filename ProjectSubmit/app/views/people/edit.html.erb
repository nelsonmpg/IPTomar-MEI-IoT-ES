<h1>Editar Pessoas</h1>
 
<%= form_for :person, url: person_path(@person), method: :patch do |f| %>
 
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@person.errors.count, "error") %> n√£o foi guardado
      </h2>
      <ul>
        <% @person.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
   <p>
    <%= f.label :"Nome" %><br>
    <%= f.text_field :name %>
  </p>
 
 <p>
    <%= f.label :"email" %><br>
    <%= f.text_field :email %>
  </p>

 <%= f.label :"Foto" %><br>
  <%= f.file_field :photo %>

 <p>
<%= f.label :"Titulo" %><br>
<%= f.select( :person_type_id, PersonType.all.collect { |s| [s.designation, s.id] }, {}, {class: 'form-control'}) %>
 </p>
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Voltar', people_path %>