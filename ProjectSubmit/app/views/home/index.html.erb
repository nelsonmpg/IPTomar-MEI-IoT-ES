
<section class="margin">
	<div class="content">
		<p class="switch">switch layout: <span id="grid">Grid</span> &bull; <span id="classic">Classic</span></p>

		<!-- {% if page.title %}<h1 class="title">{{ page.title }}</h1>{% endif %} -->
		<div class="articles">
			<% @projects.each do |proj|%>
				<article>
					<a href="/standard/" class="noline">
						<img src="/img/1.jpg" alt="1.jpg">
					</a>

					<span class="category"><%=proj.title%></span>

					<a href="/projects/<%=proj.id%>">
						<h1><%=proj.title%></h1>
					</a>

					<p class="post_content"><%=proj.resume%></p>

					<span class="date"><i class="fa fa-calendar"></i><%=proj.date%></span>
				</article>
			<%end%>
		</div>


		<div class="sidebar">

			<div class="widget">
				<h3 class="title">Escolas</h3>
				<ul class="category_list">
					<!-- <a href="/schools">Escolas</a> -->
					<% @schools.each do |school|%>
						<li><%=school.name%></li>
					<%end%>
				</ul>
			</div>

			<div class="widget">
				<h3 class="title">Cursos</h3>
				<ul class="category_list">
					<% @courses.each do |course|%>
						<li><%=course.name%></li>
					<%end%>
				</ul>
			</div>

			<div class="widget">
				<h3 class="title">TAG's</h3>
				<ul class="category_list">
					
				</ul>
			</div>
		</div>

		<!-- <% render partial: "layouts/sidebar" %> -->
	</div>
	
</section>


