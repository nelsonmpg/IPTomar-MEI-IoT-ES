<h1>Adicionar Documento</h1>

<%= form_for :document, url: documents_path do |f| %>

  <% if @document.errors.any? %>
    <div id="error_explanation">
      <h2>Existe erros no formulário
        <%#  <%= pluralize(@school.errors.count, "error") %>
      </h2>

      <ul>
        <% @document.errors.each do |attr,msg| %>
    <li><%= msg %></li>
<% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :"Documento/Relatório" %><br>
    <%= f.file_field :document %>
  </p>

  <p>
 <%= f.label :"Projeto a que pertence a Apresentação" %><br>
 <%= f.select :project_id, Project.all.collect { |s| [s.title, s.id] } %>
 </p>


  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Voltar', documents_path %>
