<h1>Lista de Cursos</h1>
 
 <%= link_to 'Adicionar Curso', new_course_path %>
<table>
  <tr>
    <th>Curso:</th>



    </tr>

  <% @courses.each do |course| %>
    <tr>
      <td><%= course.name %></td>
      <td><%= course.description %></td>
      <td><%= course.code %></td>
      <td><%= course.initials %></td>
      <td><%= link_to 'Mostrar', course_path(course) %></td>
      <td><%= link_to 'Editar', edit_course_path(course) %></td>
     <td><%= link_to 'Remover', course_path(course), method: :delete, data: { confirm: 'Tem a certeza que deseja eliminar este Curso?' } %></td>
    </tr>
    

  <% end %>
</table>