<h1>Lista de Courses</h1>
 
 <%= link_to 'Adicionar Course', new_course_path %>
<table>
  <tr>
    <th>Course:</th>

  </tr>
 
  <% @courses.each do |course| %>
    <tr>
      <td><%= course.description %></td>

      <td><%= link_to 'Mostrar', course_path(course) %></td>
      <td><%= link_to 'Editar', edit_course_path(course) %></td>
     <td><%= link_to 'Remover', course_path(course), method: :delete, data: { confirm: 'Tem a certeza que deseja eliminar este course?' } %></td>
    
    </tr>
  <% end %>
</table>