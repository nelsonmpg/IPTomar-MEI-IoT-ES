<%=form_for @project do |f| %>
  <% if project.errors.any? %>
      <div id="error_explanation" class="alert alert-warning" role="alert">
          <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>
          <ul>
              <% project.errors.full_messages.each do |message| %>
                  <li>
                      <%= message %>
                  </li>
                  <% end %>
          </ul>
      </div>
  <% end %>
  <div class=" col-xs-12">
    <div class="row">
        <fieldset class="form-group">
            <%=f.label :"Titulo do Projeto" %>
            <%=f.text_field :title, class: 'form-control' %>
        </fieldset>
    </div>
    <div class="row">
        <fieldset class="form-group col-xs-7">
            <%=f.label :"Resumo do Projeto" %>
            <%=f.text_area :resume, class: 'form-control', rows: 15 %>
        </fieldset>

        <fieldset class="form-group col-xs-1">
            <%=f.label :"Grau" %>
            <%=f.select( :grade, options_for_select([[ "1"],[ "2"],[ "3"],[ "4"],[ "5"],[ "6"],[ "7"],[ "8"],[ "9"]]), {}, {class: 'form-control'}) %>
        </fieldset>

        <fieldset class="form-group col-xs-4">
            <%=f.label :course_unit_id %>
            <%=f.select :course_unit_id, CourseUnit.all.order(name: :asc).collect { |s| [s.name, s.id] }, {}, {class: 'form-control'} %>
        </fieldset>

        <fieldset class="form-group col-xs-5">
            <%=f.label :"Data do Projeto" %>
            <%=f.date_field :date, class: 'form-control custom-select' %>
        </fieldset>

        <fieldset class="form-group col-xs-5">
            <%=f.label :"Link GitHub" %>
            <%=f.text_field :github, class: 'form-control' %>
        </fieldset>

        <fieldset class="form-group col-xs-5">
            <%=f.label :"Url do Projeto" %>
            <%=f.text_field :project_url, class: 'form-control' %>
        </fieldset>

        <div class="row col-xs-5">
            <div class=" col-xs-1"></div>

            <label class="custom-control custom-checkbox col-xs-2">
                <%=f.check_box :user_id, class: 'custom-control-input' %>
                <%=f.label :user_id, class: 'custom-control-description' %>
                <span class="custom-control-indicator"></span>
            </label>
            <label class="custom-control custom-checkbox col-xs-3">
                <%=f.check_box :featured, class: 'custom-control-input' %>
                <%=f.label :"Destacar", class: 'custom-control-description' %>
                <span class="custom-control-indicator"></span>
            </label>

            <label class="custom-control custom-checkbox col-xs-5">
                <%=f.check_box :finished, class: 'custom-control-input' %>
                <%=f.label :"Projecto acabado", class: 'custom-control-description' %>
                <span class="custom-control-indicator"></span>
            </label>

        </div>
    </div>
    <div class="row">

        <fieldset class="form-group col-xs-12">
            <%=f.label :tag_list, 'Tags (separar por vírgulas)' %>
            <%=f.text_field :tag_list, class: 'form-control' %>
        </fieldset>
    </div>
    <div class="row">
        <div class=" col-xs-12">
            <%= f.fields_for :presentation do |ff| %>
              <fieldset class="form-group col-xs-6">
                  <%= ff.label :"Data de Apresentação" %>
                  <%=ff.date_field :date, class: 'form-control custom-select' %>
              </fieldset>
              <fieldset class="form-group col-xs-6">
                  <%= ff.label :"Sala de Apresentação" %>
                  <%= ff.text_field :room, class: 'form-control' %>
              </fieldset>
              <fieldset class="form-group col-xs-6">
                <%= ff.label :"Slides da Apresentação" %><br>
                <%= ff.file_field :slides %>
              </fieldset>
            <% end %>
        </div>
    </div>
    

<div class="field">
<%= f.fields_for :documents, @project.documents do |ffff| %>
<p>
 
    <%= ffff.label :"Nome do Documento" %><br>
    <%= ffff.text_field :name %>
  </p>

  <p>
    <%= ffff.label :"Descrição do Documento" %><br>
    <%= ffff.text_field :description %>
  </p>

 <p>
    <%= ffff.label :"Data do Documento" %> AAAAMMDD ex: 20161202<br>
    <%= ffff.text_field :date %>
  </p>

  <p>
    <%= ffff.label :"Local do Documento" %><br>
    <%= ffff.text_field :local %>
  </p>
  <p>
    <%= ffff.label :"Documento/Relatório" %><br>
    <%= ffff.file_field :document %>
  </p>
<% end %>
</div>

<% end %>


<div class="row">
        <div class="actions">
          <%= button_tag type: 'submit', class: "btn btn-outline-success btn-block" do %>
                <i class="fa fa-floppy-o" aria-hidden="true"></i> Salvar Projeto
            <% end %>
        </div>
    </div>
    <div class="row">
    &nbsp;
    </div>
</div>