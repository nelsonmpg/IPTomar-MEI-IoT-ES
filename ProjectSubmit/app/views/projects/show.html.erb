<section class="margin">
  <div class="content">
    <div class="content_container">
      <article class="rounded">
        <p id="notice"><%= notice %></p>

        <h1 class="post_title">
          <%= @project.title %>
        </h1>

        <div class="row">
          <div class=col-xs-12>
            <div class="meta">
                Publicado por <%= @project.user.email.split('@')[0] %> &bull; <%= @project.date %>
          </div>
          </div>
          </div>
         <!--   </div>
          <div class=col-xs-6>
            <div class="meta">
              <%= @project.course_unit.course.school.name %> &bull; <%= @project.course_unit.course.name %> &bull; <%= @project.course_unit.name %>
            </div>
          </div>
        </div> -->

        <!-- Carrossel de imagens-->
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
            <li data-target="#carousel-example-generic" data-slide-to="3"></li>
            <li data-target="#carousel-example-generic" data-slide-to="4"></li>
            <li data-target="#carousel-example-generic" data-slide-to="5"></li>
          </ol>
          <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
              <img src="/img/1.jpg">
            </div>
            <div class="carousel-item">    
                <img src="/img/2.jpg">               
            </div>
            <div class="carousel-item">    
                <img src="/img/2.jpg">               
            </div>
            <div class="carousel-item">    
                <img src="/img/3.jpg">               
            </div>
            <div class="carousel-item">    
                <img src="/img/4.jpg">               
            </div>
            <div class="carousel-item">    
                <img src="/img/5.jpg">               
            </div>
          </div>
          <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="icon-prev" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="icon-next" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

        <!-- Conteudo do projeto-->
        <div class="post_content">
            <%= @project.resume %>
        </div>

        <div class="catsandtags">
            <p class="category">
                <span class="name">Link Github:</span> 
                <%= @project.github %> &bull;

                <span class="name">Grau:</span> 
                <%= @project.grade %> &bull;

                <span class="name">Url do projeto:</span> 
                <%= @project.project_url %> &bull;

                <span class="name">Data de Apresentação:</span> 
                <%= @project.presentation.date %>

                <span class="name">Sala de Apresentação:</span>
                <%= @project.presentation.room %>

            </p>
            <p class="category">
              <span class="name">Featured:</span> 
              <% if @project.featured == TRUE %>
                yes
              <% else %>
                no
              <% end %>
              &bull;

              <p>
                <strong>Destaque:</strong>
                <%= @project.featured %>
              </p>

              <p>
                <strong>Utilizador:</strong>
                <%= @project.user.email %>
              </p>

              <p>
                <strong>Escola a que pertence:</strong>
                <%= @project.course_unit.course.school.name %>
              </p>

              <p>
                <strong>Curso a que Pertence:</strong>
                <%= @project.course_unit.course.name %>
              </p>

              <p>
                <strong>Cadeira a que pertence:</strong>
                <%= @project.course_unit.name %>
              </p>

               <span class="name">Finished:</span> 
              <% if @project.finished == TRUE %>
                yes
              <% else %>
                no
              <% end %>
            </p>

            <p class="tags">
                <span class="name">Tags:</span>
                    <a href="#"><%= @project.tag_list %></a>
            </p>
        </div>
      </article>

      <div class="post_nav">
        <% if user_signed_in?%>
          <%= link_to 'Editar', edit_project_path(@project), class: 'btn btn-default' %>
        <% end %>
        <%= link_to '< Voltar atrás', projects_path, class: 'btn btn-default' %>
      </div>
      
    </div>
    <%= render partial: "shared/sidebar", locals: {schools: @sb_schools, courses: @sb_courses, tags:  @sb_tags} %>
  </div>  
</section>
