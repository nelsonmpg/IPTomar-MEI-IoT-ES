<div class="nested-fields bg-faded my-1">
  <div class="row">
    <div class="col-md-11">
      <% if f.object.id.nil? %>
        <!-- <%= f.label :image, "Escolha uma imagem: " %> -->
        <%= f.file_field :image %>
      <% else %>
        <%= image_tag f.object.image.url(:thumb) %>
      <% end %>
    </div>
    <div class="col-md-1">
      <%= link_to_remove_association "X", f, class: "btn btn-danger btn-sm", data: {confirm: 'Tens a certeza, Miguel?'} %>
    </div>
  </div>
</div>