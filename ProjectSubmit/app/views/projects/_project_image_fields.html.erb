<div class="nested-fields">
<% if f.object.id.nil? %>
  <%= f.label :image, "Escolha uma imagem: " %>
  <%= f.file_field :image %>
  <% else %>
  <%= image_tag f.object.image.url(:thumb) %>
<% end %>
    
  <%= link_to_remove_association "Remover", f, class: "btn btn-danger btn-lg", data: {confirm: 'Tens a certeza, Miguel?'} %>
</div>