<div class="content mt-1">
  <div class="jumbotron px-1 py-1 rounded">
    <div class="alert alert-success" role="alert">
      <h1 class="text-xs-center">Projects</h1>
    </div>
    <p id="notice"><%= notice %></p>

    <div class="table-responsive card card-outline-secundary">
      <div class="card-block">
        <table class="table table-hover table-sm">
          <thead class="thead-inverse">
            <tr>
              <th>Titulo do Projeto</th>
            <!--  <th>Resumo do Projeto</th> -->
              <th>Data do Projeto</th>
             <!-- <th>Link GitHub</th>
              <th>Grau</th>
              <th>Url do Projeto</th> -->
              <th>Data de Apresentação</th>
              <th>Sala de Apresentação</th>
            <!--  <th>Destaque</th> -->
              <th>Projeto Finalizado</th>
            <!--   <th>Tag(s)</th>
             <th>Utilizador</th> -->
              <th>Cadeira</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @projects.each do |project| %>
              <tr>
                <td class="align-middle"><%= project.title %></td>
              <!--  <td><%= project.resume %></td> -->
                <td class="align-middle"><%= project.date %></td>
              <!--  <td><%#= project.github %></td>
                <td><%#= project.grade %></td>
                <td><%#= project.project_url %></td> -->
                <td class="text-xs-center align-middle"><%= project.presentation.date %></td>
                <td class="text-xs-center align-middle"><%= project.presentation.room %></td>
               <!-- <td><%#= project.featured %></td> -->           
                <td class="text-xs-center align-middle">
                  <label class="custom-control custom-checkbox align-middle">
                    <input type=" checkbox" <%= 'checked' if project.finished %> class="custom-control-input">
                    <span class="custom-control-indicator"></span>
                  </label>    
                </td class="align-middle">
                <td><%= raw project.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></td class="align-middle">
              <!--  <td><%#= project.user.email %></td> -->
                <td class="align-middle"><%= project.course_unit.name %></td>   
                
                <td class="align-middle">
                  <%= link_to 'Visualizar', project, class: "btn btn-outline-info btn-sm btn-block d-inline-block" %>
                  <% if user_signed_in? %>
                    <%= link_to 'Editar', edit_project_path(project), class: "btn btn-outline-success btn-sm btn-block" %>
                    <%= button_to 'Eliminar', project, method: :delete, data: { confirm: 'Tem a certeza de que quer eliminar este Projeto?' }, class: "btn btn-outline-danger btn-sm btn-block" %> 
                  <%end%>             
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>   
    </div>
    <%= will_paginate @projects, class: "pagination" %> 
    </div> 
  </div>
</div>